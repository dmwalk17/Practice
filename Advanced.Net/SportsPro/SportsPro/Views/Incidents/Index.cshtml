@model  IEnumerable<SportsPro.Models.IncidentViewModel> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Incidents", FormMethod.Post, new { id = "TheForm" }))
{
   <div class="row">
        <label class="col-md-offset-1 col-md-3">Select a customer:</label>
        <span class="col-md-4">@Html.DropDownList("ddlCustomers", (SelectList)ViewBag.Customers, "--Select Customer--", new { onchange = "this.form.submit();" }) </span>
    </div><br /><br />
}
<div class="container">
    <table id="CustomerIncidentDataList" class="table table-striped table-inverse">
   
        <tr>
            <th>CustomerID</th>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Tech ID</th>
            <th>Tech Name</th>
            <th>Date Opened</th>
            <th>Date Closed</th>
            <th>Description</th>

        </tr>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                  <tr>
                      <td>@item.CustomerID</td>
                      <td>@item.ProductCode</td>
                    <td>@item.ProductName</td>
                      <td>@item.TechID</td>
                    <td>@item.TechnicianName</td>
                    <td>@item.DateOpened</td>
                    <td>@item.DateClosed</td>
                    <td>@item.Description</td>
                  </tr>
                }
            }
            <tr></tr>
        </tbody>
    </table>
</div>



